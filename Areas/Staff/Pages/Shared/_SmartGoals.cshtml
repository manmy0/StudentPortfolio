@using StudentPortfolio.Models.Staff_Models
@model GoalsData

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                SMART Goal
            </th>
            <th>
                Action Steps
            </th>
            @if (Model.GoalData.Any())
            {
            <th>
                @Html.DisplayNameFor(model => model.GoalData[0].Timeline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoalData[0].Progress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoalData[0].Learnings)
            </th>
            }
            else
            {
                <th>Timeline</th>
                <th>Progress</th>
                <th>Learnings</th>
            }
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Completed
            </th>
            <th>
                Completion Notes
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.GoalData)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td style="text-align: center;">

                    @foreach (var step in Model.GoalStepData.Where(s => s.GoalId == item.GoalId))
                    {

                        <ul style="text-align: left;">
                            <li>
                                @Html.DisplayFor(modelItem => step.Step)
                            </li>
                        </ul>

                    }

                <td>
                    @Html.DisplayFor(modelItem => item.Timeline)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Progress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Learnings)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompleteDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompletionNotes)
                </td>
                <td>
                    <a asp-area="Staff" asp-page="/Feedback" asp-route-goalId="@item.GoalId" title="Provide Feedback">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                    </a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>

