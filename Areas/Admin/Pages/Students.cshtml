@page
@model StudentPortfolio.Areas.Admin.Pages.StudentsModel
@{
    ViewData["Title"] = "Students";
}

<a class="btn btn-success" asp-area="Admin" asp-page="Register">Register New Student</a>

<table class="table table-bordered table-striped" id="myTable" data-toggle="table" data-select-item-name="btSelectItem" data-multiple-select-row="true">
    <thead>
        <tr>
            <th><input type="checkbox" id="selectAllRows"></th>
            <th>
                Name
            </th>
            <th>
                Degree
            </th>
            <th>
                View Data
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Users)
        {
            <tr>
                <td><input type="checkbox" class="rowCheckbox" data-id="1"></td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Degree)
                </td>
                <td>
                    <button id="deleteSelectedBtn" class="btn btn-danger">Delete Selected</button>
                </td>
            </tr>
        }
    </tbody>
</table>

