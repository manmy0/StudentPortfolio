@page
@model StudentPortfolio.Pages.Goals.GoalsModel

@{
    ViewData["Title"] = "Goals";
}

@section GoalsNav {
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" asp-page="/Goals/Goals">Goals</a>
    </li>
}

<div>
    <!-- get puts selectedYear=xxxx in the url for the controller to use -->
    <form method="get">
        <label for="select-year" class="form-label fw-bold">Filter by year</label>
        <select id="select-year" class="form-select w-auto" name="selectedYear" onchange="this.form.submit()">
            @if (Model.PossibleYears != null)
            {
                @foreach (var year in Model.PossibleYears)
                {
                    <option value="@year" selected="@(Model.selectedYear == year)">@year</option>
                }
            }
        </select>
    </form>
    @if (Model.CDP.FirstOrDefault().Year == Model.thisYear)
    {
        <a class="btn btn-primary" asp-page="EditCDP">Update Career Plan</a>
    }
    else
    {
        <a class="btn btn-primary" @*asp-page="CreateCDP"*@>New Career Plan</a>
    }
</div>

<div class="info-container">
    <label for="prof" style="display: inline-block; margin-right: 10px; margin-bottom: 20px; vertical-align: middle;">Professional Interests:</label>
    <textarea class="form-control" id="prof" rows="3" style="height: 20px; width: 1080px; margin-bottom: 20px; display: inline-block; vertical-align: middle;" readonly>@Html.DisplayFor(model => model.CDP.FirstOrDefault().ProfessionalInterests)</textarea>

    <label for="emp" style="display: inline-block; margin-right: 10px; margin-bottom: 20px; vertical-align: middle;">Employers of interest:</label>
    <textarea class="form-control" id="emp" rows="3" style="height: 20px; width: 1080px; margin-bottom: 20px; display: inline-block; vertical-align: middle;" readonly>@Html.DisplayFor(model => model.CDP.FirstOrDefault().EmployersOfInterest)</textarea>
    <div class="info-container">
        <label for="per" style="display: inline-block; margin-right: 50px; margin-bottom: 20px; vertical-align: middle;">Personal Values:</label>
        <textarea class="form-control" id="per" rows="3" style="height: 20px; width: 1080px; margin-bottom: 20px; display: inline-block; vertical-align: middle;" readonly>@Html.DisplayFor(model => model.CDP.FirstOrDefault().PersonalValues)</textarea>
    
        <label for="dev" style="display: inline-block; margin-right: 10px; margin-bottom: 20px; vertical-align: middle;">Development Focus for This Year:</label>
        <textarea class="form-control" id="dev" style="height: 100px; width: 1080px; margin-bottom: 20px; display: inline-block; vertical-align: middle;" rows="5" readonly>@Html.DisplayFor(model => model.CDP.FirstOrDefault().DevelopmentFocus)</textarea>
    </div>
    <label for="net" style="display: inline-block; margin-right: 10px; margin-bottom: 20px; vertical-align: middle;">Networking Plan:</label>
    <textarea class="form-control" id="net" rows="3" style="height: 20px; width: 1080px; margin-bottom: 20px; display: inline-block; vertical-align: middle;" readonly>@Html.DisplayFor(model => model.CDP.FirstOrDefault().NetworkingPlan)</textarea>

    <label for="extra" style="display: inline-block; margin-right: 10px; margin-bottom: 20px; vertical-align: middle;">Extracurricular:</label>
    <textarea class="form-control" id="extra" rows="3" style="height: 20px; width: 1080px; margin-bottom: 20px; display: inline-block; vertical-align: middle;" readonly>@Html.DisplayFor(model => model.CDP.FirstOrDefault().Extracurricular)</textarea>
</div>

<a class="btn btn-primary" asp-page="Create">New Goal</a>

<div class="input-container">
    <h3>Date Range</h3>
    <label for="fromInput">From:</label>
    <input class="input" type="month" id="fromInput" name="from">

    <label for="toInput">To:</label>
    <input class="input" type="month" id="toInput" name="to">
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                SMART Goal
            </th>
            <th>
                Action Steps
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Goal[0].Timeline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Goal[0].Progress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Goal[0].Learnings)
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Completed
            </th>
            <th>
                Completion Notes
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Goal)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td style="text-align: center;">

                    @foreach (var step in Model.GoalSteps.Where(s => s.GoalId == item.GoalId))
                    {

                        <ul style="text-align: left;">
                            <li>
                                @Html.DisplayFor(modelItem => step.Step)
                            </li>
                        </ul>

                    }
                    
                    @if (!Model.GoalSteps.Any(s => s.GoalId == item.GoalId))
                    {
                        <a class="btn btn-primary"  asp-page="CreateSteps" asp-route-goalId="@item.GoalId">Add Steps</a>
                    }
                    else
                    {
                        <a class="btn btn-success" asp-page="EditStep" asp-route-goalId="@item.GoalId">Edit Steps</a>
                    }

                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Timeline)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Progress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Learnings)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompleteDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompletionNotes)
                </td>
                <td>
                    <div class="icon-display">
                        <a asp-page="./Edit" asp-route-id="@item.GoalId">
                             <img src="~/img/edit-icon-png-3602.png" style="height: 30px; width: 30px;" alt="Edit Goal" title="Edit Goal">
                        </a>
                        <form asp-page-handler="Delete" method="post" asp-route-id="@item.GoalId" onsubmit="return confirm('Are you sure you want to delete this goal?');">
                            <button class="delete-button" type="submit">
                                <img src="~/img/garbage-bin-png-10491.png" style="height: 40px; width: 40px;" alt="Delete Goal" title="Delete Goal">
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

