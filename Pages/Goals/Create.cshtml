@page
@model StudentPortfolio.Pages.Goals.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h3>Create New Goal</h3>

<hr />
<div class="row">
    <div class="input-group">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Goal.Description" class="control-label"></label>
                <input asp-for="Goal.Description" class="form-control" />
                <span asp-validation-for="Goal.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goal.Timeline" class="control-label"></label>
                <input asp-for="Goal.Timeline" class="form-control" />
                <span asp-validation-for="Goal.Timeline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goal.StartDate" class="control-label">Start Date</label>
                <input asp-for="Goal.StartDate" class="form-control" />
                <span asp-validation-for="Goal.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goal.EndDate" class="control-label">End Date</label>
                <input asp-for="Goal.EndDate" class="form-control" />
                <span asp-validation-for="Goal.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a class="btn btn-danger" asp-page="Goals">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
