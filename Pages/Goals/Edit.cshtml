@page
@model StudentPortfolio.Pages.Goals.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit Goal</h3>

<hr />

<h3> Goal: @Model.Goal.Description</h3>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Goal.GoalId" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Goal.Description" class="control-label"></label>
                <input asp-for="Goal.Description" class="form-control" />
                <span asp-validation-for="Goal.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goal.Timeline" class="control-label"></label>
                <input asp-for="Goal.Timeline" class="form-control" />
                <span asp-validation-for="Goal.Timeline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goal.Progress" class="control-label"></label>
                <input asp-for="Goal.Progress" class="form-control" />
                <span asp-validation-for="Goal.Progress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goal.Learnings" class="control-label"></label>
                <input asp-for="Goal.Learnings" class="form-control" />
                <span asp-validation-for="Goal.Learnings" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goal.StartDate" class="control-label">Start Date</label>
                <input asp-for="Goal.StartDate" class="form-control" />
                <span asp-validation-for="Goal.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goal.EndDate" class="control-label">End Date</label>
                <input asp-for="Goal.EndDate" class="form-control" />
                <span asp-validation-for="Goal.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goal.CompleteDate" class="control-label">Complete Date</label>
                <input asp-for="Goal.CompleteDate" class="form-control" />
                <span asp-validation-for="Goal.CompleteDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goal.CompletionNotes" class="control-label">Completion Notes</label>
                <input asp-for="Goal.CompletionNotes" class="form-control" />
                <span asp-validation-for="Goal.CompletionNotes" class="text-danger"></span>
            </div>
            <div class="form-button-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a class="btn btn-danger" asp-page="Goals">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
