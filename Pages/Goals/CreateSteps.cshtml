@page
@model StudentPortfolio.Pages.Goals.CreateStepsModel

@{
    ViewData["Title"] = "CreateSteps";
}

<h1>CreateSteps</h1>

<h4>GoalStep</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GoalStep.GoalId" class="control-label"></label>
                <select asp-for="GoalStep.GoalId" class ="form-control" asp-items="ViewBag.GoalId"></select>
            </div>
            <div class="form-group">
                <label asp-for="GoalStep.Step" class="control-label"></label>
                <input asp-for="GoalStep.Step" class="form-control" />
