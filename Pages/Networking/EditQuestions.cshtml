@page
@model StudentPortfolio.Pages.Networking.EditQuestionsModel

@{
    ViewData["Title"] = "EditQuestions";
}

<h1>EditQuestions</h1>

<h4>NetworkingQuestion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
