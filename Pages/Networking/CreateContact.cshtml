@page
@model StudentPortfolio.Pages.Networking.CreateContactModel

@{
    ViewData["Title"] = "CreateContact";
}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-1 rounded-4">

                <div class="card-header bg-light text-black rounded-top-4">
                    <h4 class="mb-0">Create New Industry Contact</h4>
                </div>

                <div class="card-body p-4">

                    <form method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <h5 class="mb-3 text-black">Basic Information</h5>

                        <div class="form-group mb-3">
                            <label asp-for="IndustryContactLog.Name" class="form-label fw-bold">Name</label>
                            <input asp-for="IndustryContactLog.Name" class="form-control" />
                            <span asp-validation-for="IndustryContactLog.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="IndustryContactLog.Company" class="form-label fw-bold">Company</label>
                            <input asp-for="IndustryContactLog.Company" class="form-control" />
                            <span asp-validation-for="IndustryContactLog.Company" class="text-danger"></span>
                        </div>

                        <h5 class="mt-3 mb-3 text-black pt-3 border-top">Contact Methods</h5>

                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input type="checkbox" id="phoneCheck" class="form-check-input">
                                <label class="form-check-label" for="phoneCheck">Phone Number</label>
                            </div>
                            <div id="phoneInputContainer" class="mt-2" style="display:none;">
                                <input asp-for="PhoneNumber" class="form-control"/> 
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input type="checkbox" id="emailCheck" class="form-check-input">
                                <label class="form-check-label" for="emailCheck">Email</label>
                            </div>
                            <div id="emailInputContainer" class="mt-2" style="display:none;">
                                <input asp-for="EmailAddress" class="form-control" type="email" />
                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input type="checkbox" id="linkedInCheck" class="form-check-input">
                                <label class="form-check-label" for="linkedInCheck">LinkedIn</label>
                            </div>
                            <div id="linkedInInputContainer" class="mt-2" style="display:none;">
                                <input asp-for="LinkedInUrl" class="form-control" />
                                <span asp-validation-for="LinkedInUrl" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <div class="form-check">
                                <input type="checkbox" id="otherCheck" class="form-check-input">
                                <label class="form-check-label" for="otherCheck">Other</label>
                            </div>
                            <div id="otherInputContainer" class="p-3 mt-2 border rounded-3" style="display:none;">
                                <div class="form-group mb-3">
                                    <label class="form-label">Contact Type</label>
                                    <input asp-for="OtherContactType" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="OtherContactDetails" class="form-label">Details</label>
                                    <input asp-for="OtherContactDetails" class="form-control" />
                                    <span asp-validation-for="OtherContactDetails" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <h5 class="mt-3 mb-3 text-black pt-3 border-top">History</h5>

                        <div class="form-group mb-3">
                            <label asp-for="IndustryContactLog.Notes" class="form-label fw-bold">Notes</label>
                            <textarea asp-for="IndustryContactLog.Notes" class="form-control" rows="6"></textarea>
                            <span asp-validation-for="IndustryContactLog.Notes" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="IndustryContactLog.DateMet" class="form-label">Date Met</label>
                            <input asp-for="IndustryContactLog.DateMet" class="form-control" type="date" />
                            <span asp-validation-for="IndustryContactLog.DateMet" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-center gap-2 pt-3 border-top">
                            <a class="btn btn-danger" asp-page="Networking">Cancel</a>
                            <input type="submit" value="Create Contact" class="btn btn-success" />
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const phoneCheck = document.getElementById('phoneCheck');
            const emailCheck = document.getElementById('emailCheck');
            const linkedInCheck = document.getElementById('linkedInCheck');

            const phoneInputContainer = document.getElementById('phoneInputContainer');
            const emailInputContainer = document.getElementById('emailInputContainer');
            const linkedInInputContainer = document.getElementById('linkedInInputContainer');

            phoneCheck.addEventListener('change', function () {
                phoneInputContainer.style.display = this.checked ? 'block' : 'none';
            });

            emailCheck.addEventListener('change', function () {
                emailInputContainer.style.display = this.checked ? 'block' : 'none';
            });

            linkedInCheck.addEventListener('change', function () {
                linkedInInputContainer.style.display = this.checked ? 'block' : 'none';
            });

            otherCheck.addEventListener('change', function () {
                otherInputContainer.style.display = this.checked ? 'block' : 'none';
            });
        });
    </script>
}
