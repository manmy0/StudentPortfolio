@page
@model StudentPortfolio.Pages.Networking.EditContactModel

@{
    ViewData["Title"] = "EditContact";
}


<h3>Edit Contact</h3>

<hr />

<h3> Contact: @Model.IndustryContactLog.Name</h3>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IndustryContactLog.ContactId" />
            <div class="form-group">
                <label asp-for="IndustryContactLog.Name" class="control-label"></label>
                <input asp-for="IndustryContactLog.Name" class="form-control" />
                <span asp-validation-for="IndustryContactLog.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IndustryContactLog.Company" class="control-label"></label>
                <input asp-for="IndustryContactLog.Company" class="form-control" />
                <span asp-validation-for="IndustryContactLog.Company" class="text-danger"></span>
            </div>

            <hr />

            <p>Contact Information</p>

            <div>
                <label class="checkbox-inline"><input type="checkbox" id="phoneCheck">Phone Number</label>
                <div id="phoneInputContainer" style="display:none;">
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div>
                <label class="checkbox-inline"><input type="checkbox" id="emailCheck">Email</label>
                <div id="emailInputContainer" style="display:none;">
                    <input asp-for="EmailAddress" class="form-control" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
            </div>
            <div>
                <label class="checkbox-inline"><input type="checkbox" id="linkedInCheck">LinkedIn</label>
                <div id="linkedInInputContainer" style="display:none;">
                    <input asp-for="LinkedInUrl" class="form-control" />
                    <span asp-validation-for="LinkedInUrl" class="text-danger"></span>
                </div>
            </div>
            <div>
                <label class="checkbox-inline"><input type="checkbox" id="otherCheck">Other</label>
                <div id="otherInputContainer" style="display:none;">
                    <input asp-for="OtherContactType" class="form-control" />
                    <label class="control-label" style="margin-top: 10px;">Details</label>
                    <input asp-for="OtherContactDetails" class="form-control" />
                    <span asp-validation-for="OtherContactDetails" class="text-danger"></span>
                </div>
            </div>

            <hr />

            <div class="form-group">
                <label asp-for="IndustryContactLog.Notes" class="control-label"></label>
                <textarea asp-for="IndustryContactLog.Notes" class="form-control" rows="10"></textarea>
                <span asp-validation-for="IndustryContactLog.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IndustryContactLog.DateMet" class="control-label">Date Met</label>
                <input asp-for="IndustryContactLog.DateMet" class="form-control" />
                <span asp-validation-for="IndustryContactLog.DateMet" class="text-danger"></span>
            </div>
            <div class="form-button-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a class="btn btn-danger" asp-page="Networking">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener('DOMContentLoaded', function () {

            function setupToggle(checkboxId, containerId, value) {
                const check = document.getElementById(checkboxId);
                const container = document.getElementById(containerId);

                if (value && value.trim() !== '') {
                    check.checked = true;
                    container.style.display = 'block';
                }

                check.addEventListener('change', function () {
                    container.style.display = this.checked ? 'block' : 'none';
                });
            }

            setupToggle('phoneCheck', 'phoneInputContainer', '@Model.PhoneNumber');
            setupToggle('emailCheck', 'emailInputContainer', '@Model.EmailAddress');
            setupToggle('linkedInCheck', 'linkedInInputContainer', '@Model.LinkedInUrl');
            setupToggle('otherCheck', 'otherInputContainer', '@Model.OtherContactDetails');

        });
    </script>
}
