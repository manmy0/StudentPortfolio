@page
@model StudentPortfolio.Pages.Networking.CreateEventModel

@{
    ViewData["Title"] = "CreateEvent";
}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-sm border-1 rounded-4">

                <div class="card-header bg-light text-black rounded-top-4">
                    <h4 class="mb-0">Create New Event</h4>
                </div>

                <div class="card-body p-4">

                    <form method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="NetworkingEvent.Name" class="form-label fw-bold">Event Name</label>
                            <input asp-for="NetworkingEvent.Name" class="form-control" />
                            <span asp-validation-for="NetworkingEvent.Name" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    <label asp-for="NetworkingEvent.Date" class="form-label">Date</label>
                                    <input asp-for="NetworkingEvent.Date" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="NetworkingEvent.Date" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    <label asp-for="NetworkingEvent.Location" class="form-label">Location</label>
                                    <input asp-for="NetworkingEvent.Location" class="form-control" />
                                    <span asp-validation-for="NetworkingEvent.Location" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="NetworkingEvent.Details" class="form-label fw-bold">Details</label>
                            <textarea asp-for="NetworkingEvent.Details" class="form-control" rows="6"></textarea>
                            <span asp-validation-for="NetworkingEvent.Details" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-center gap-2 pt-3 border-top">
                            <a class="btn btn-danger" asp-page="Networking">Cancel</a>
                            <input type="submit" value="Create Event" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
