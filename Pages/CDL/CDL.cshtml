@page
@model StudentPortfolio.Pages.CDL.CDLModel

@{
    ViewData["Title"] = "CDL";
}

@section CDLNav {
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" asp-page="/CDL/CDL">CDL</a>
    </li>
}

<h3>CDL Learning Files</h3>

<table class="table  table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cdl[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cdl[0].Description) 
            </th>
            <th>
                Uploaded
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cdl)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description) <a href="@Html.DisplayFor(modelItem => item.Link)">Link</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastUpdated)
                </td>
            </tr>
        }
    </tbody>
</table>

