@page
@model StudentPortfolio.Pages.Competencies.EditCompetencyModel

@{
    ViewData["Title"] = "EditCompetency";
}

<h2>Edit Competency</h2>

@* <h2> @Html.DisplayFor(model => model.ParentCompetency.CompetencyId). @Model.ParentCompetency.Description</h2> *@

@if (Model.ParentCompetency != null)
{
    <h2>@Model.ParentCompetency.CompetencyId. @Model.ParentCompetency.Description</h2>
}

@if (Model.ParentCompetency != null)
{
    <h3>@Model.Competency.CompetencyDisplayId @Model.Competency.Description</h3>
<a href="@Model.Competency.LinkToIndicators">Indicators</a>

<p>Level: @Model.CompetencyTracker.Level.Name</p>
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompetencyTracker.CompetencyTrackerId" />
            <input type="hidden" asp-for="CompetencyTracker.CompetencyId" />
            <input type="hidden" asp-for="CompetencyTracker.UserId" />
            <input type="hidden" asp-for="CompetencyTracker.LevelId" />

            <div class="form-group">
                <label asp-for="CompetencyTracker.StartDate" class="control-label">Start Date</label>
                <input asp-for="CompetencyTracker.StartDate" class="form-control" />
                <span asp-validation-for="CompetencyTracker.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompetencyTracker.EndDate" class="control-label">End Date</label>
                <input asp-for="CompetencyTracker.EndDate" class="form-control" />
                <span asp-validation-for="CompetencyTracker.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompetencyTracker.SkillsReview" class="control-label"></label>
                <input asp-for="CompetencyTracker.SkillsReview" class="form-control" />
                <span asp-validation-for="CompetencyTracker.SkillsReview" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompetencyTracker.Evidence" class="control-label"></label>
                <input asp-for="CompetencyTracker.Evidence" class="form-control" />
                <span asp-validation-for="CompetencyTracker.Evidence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a class="btn btn-danger" asp-page="Competencies">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
