<h1>Competency Performance Summary</h1>

@if (Model.CompetencyPerformanceSummary.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Competency</th>
                <th>Number of Performance Self Evaluation Examples</th>
                <th>Highest Attainment Level</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var competencyTracker in Model.CompetencyPerformanceSummary)
            {
                <tr>
                    <td>
                        @competencyTracker.CompetencyDisplayId
                    </td>
                    <td>
                        @competencyTracker.TrackerCount
                    </td>
                    <td>
                        Level @competencyTracker.HighestLevelId
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h1>Needs More Focus</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Competency</th>
                <th>Level</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var competencyTracker in Model.LowestFiveCompetencies)
            {
                <tr>
                    <td>@competencyTracker.CompetencyDisplayId</td>
                    <td>@competencyTracker.HighestLevelId</td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="alert alert-info" role="alert">
        No competency tracking data found for your account yet
    </div>
}