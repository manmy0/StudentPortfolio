@page
@model StudentPortfolio.Pages.Dashboard.DashboardModel
@{
    ViewData["Title"] = "Dashboard";

    Dictionary<long, string> levelDict = new Dictionary<long, string>
    {
        { 1, "Emerging" },
        { 2, "Developing" },
        { 3, "Proficient"},
        { 4, "Confident" }
    };
}

@section DashboardNav {
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" asp-page="/Dashboard/Dashboard">Dashboard</a>
    </li>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- chart script -->
    <script>

        // make it json so its easier to deal with in js
        const summaryData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.CompetencyPerformanceSummary));

        const levelCounts = {};
        const chartLabels = ['Emerging', 'Developing', 'Proficient', 'Confident'];

        // go through each tracker and count how many competencies are at each level
        summaryData.forEach(item => {
            const level = item.HighestLevelId;
            levelCounts[level] = (levelCounts[level] || 0) + 1;
        });

        // add the count of the levels to an array
        const chartDataValues = [];
        for (let i = 1; i <= 4; i++) {
            chartDataValues.push(levelCounts[i] || 0);
        }

        const ctx = document.getElementById('competencyChart').getContext('2d');

        new Chart(ctx, {
            type: 'pie',
            data: {
                labels: chartLabels,
                datasets: [{
                    label: 'Competencies',
                    data: chartDataValues,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.8)',
                        'rgba(54, 162, 235, 0.8)',
                        'rgba(255, 206, 86, 0.8)',
                        'rgba(75, 192, 192, 0.8)'
                    ],
                    borderColor: '#fff',
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                    },
                    tooltip: {
                        // show the percentage and number of competencies when mouse is hovering
                        callbacks: {
                            label: function(context) {
                                const total = context.chart._metasets[0].total; // count total number of data points in graph
                                const value = context.parsed; // number of competencies at particular level
                                const percentage = ((value / total) * 100).toFixed(1); // calculate percentage

                                return `${percentage}% (${value})`;
                            }
                        }
                    }
                }
            }
        });
    </script>

    <!-- hover to display information functionality -->
    <script>

        // im being honest here i dont fully understand what is going on but it works
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}

<!-- filter section aligned with the cards now -->
<div class="container">
    <div class="row align-items-end mb-4">
        <div class="col-md-10">
            <form method="get" class="row g-3 align-items-end">

                <!-- from year -->
                <div class="col-sm-6 col-md-4">
                    <label for="from-year" class="form-label fw-bold">From</label>
                    <select id="from-year" class="form-select" name="fromYear" onchange="this.form.submit()">
                        <option disabled selected>Select start year</option>
                        @foreach (var year in Model.AvailableYears)
                        {
                            <option value="@year" selected="@(Model.fromYear == year)">@year</option>
                        }
                    </select>
                </div>

                <!-- to year -->
                <div class="col-sm-6 col-md-4">
                    <label for="to-year" class="form-label fw-bold">To</label>
                    <select id="to-year" class="form-select" name="toYear" onchange="this.form.submit()">
                        <option disabled selected>Select end year</option>
                        @foreach (var year in Model.AvailableYears)
                        {
                            <option value="@year" selected="@(Model.toYear == year)">@year</option>
                        }
                    </select>
                </div>
            </form>
        </div>

        <!-- summary button -->
        <div class="col-md-2 text-md-end mt-3 mt-md-0">
            <a class="btn btn-primary btn-lg w-100" asp-page="/Summary/Summary">View Summary</a>
        </div>
    </div>
</div>


<div class="container mt-4">
    <div class="row gy-5">

        <!-- left column -->
        <div class="col-md-6">
            <div class="card shadow-sm p-3 mb-4">
                <h2 class="mb-4">Competency Performance Summary</h2>
                @if (Model.CompetencyPerformanceSummary.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>Competency ID</th>
                                    <th>Description</th>
                                    <th>Number of Performance Self Evaluation Examples</th>
                                    <th>Highest Attainment Level</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var tracker in Model.CompetencyPerformanceSummary)
                                {
                                    <tr>
                                        <!-- display description on hover -->
                                        <td data-bs-toggle="tooltip" title="@tracker.Description">
                                            @tracker.CompetencyDisplayId
                                        </td>
                                        <td>@tracker.Description</td>
                                        <td>@tracker.TrackerCount</td>
                                        <td>@levelDict[tracker.HighestLevelId]</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    @if (Model.fromYear > Model.toYear)
                    {
                        <p class="text-muted">Please make sure the "from" year is less than the "to" year.</p>
                    }
                    else
                    {
                        <p class="text-muted">No competency tracking data found from @(Model.fromYear) to @(Model.toYear)</p>
                    }
                }
            </div>
        </div>

        <!-- right column -->
        <div class="col-md-6">
            <div class="card shadow-sm p-3 mb-4">
                <h2 class="mb-4">Competency Attainment Levels</h2>
                <div class="card-body">
                    @if (Model.CompetencyPerformanceSummary.Any())
                    {
                        <canvas id="competencyChart"></canvas>
                    }
                    else
                    {
                        @if (Model.fromYear > Model.toYear)
                        {
                            <p class="text-muted">Please make sure the "from" year is less than the "to" year.</p>
                        }
                        else
                        {
                            <p class="text-muted">No competency tracking data found from @(Model.fromYear) to @(Model.toYear)</p>
                        }
                    }
                </div>
            </div>

            <div class="card shadow-sm p-3">
                <h2 class="mb-4">Needs More Focus</h2>
                @if (Model.LowestFiveCompetencies.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>Competency</th>
                                    <th>Description</th>
                                    <th>Level</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var tracker in Model.LowestFiveCompetencies)
                                {
                                    <tr>
                                        <td>@tracker.CompetencyDisplayId</td>
                                        <td>@tracker.Description</td>
                                        <td>@levelDict[tracker.HighestLevelId]</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    @if (Model.fromYear > Model.toYear)
                    {
                        <p class="text-muted">Please make sure the "from" year is less than the "to" year.</p>
                    }
                    else
                    {
                        <p class="text-muted">No competency tracking data found from @(Model.fromYear) to @(Model.toYear)</p>
                    }
                }
            </div>
        </div>
    </div>

</div>