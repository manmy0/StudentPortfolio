@page
@model StudentPortfolio.Pages.Export.ExportDiscontinuedTrackersModel
@{
    ViewData["Title"] = "ExportDiscontinuedTrackers";
}

<tr>
    <td>Export</td>
    <td>
        <form method="post" asp-page-handler="ExportPortfolio">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="ExportCompetencies" id="competenciesCheckbox">
                <label class="form-check-label" for="competenciesCheckbox"></label>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-warning">Export Selected</button>
            </div>
        </form>
    </td>
</tr>

@if(Model.Trackers != null)
{
    @foreach (var track in Model.Trackers)
    {
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td>
                @track.Level.Name
            </td>
            <td>
                @track.StartDate
            </td>
            <td>
                @track.EndDate
            </td>
            <td>
                @track.SkillsReview
            </td>
            <td>
                <a href="@track.Evidence">Evidence</a>
            </td>
            <td>
            </td>
        </tr>
    }
}