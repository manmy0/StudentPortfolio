@page
@model StudentPortfolio.Pages.Summary.SummaryModel
@{
    ViewData["Title"] = "Summary";
}

<div class="container my-5">

    <div class="row g-4 justify-content-center">

        <div class="col-12 col-md-10">
            <div class="row align-items-end mb-3">
                <div class="col d-flex justify-content-center position-relative">

                    <h1 class="m-0">Summary</h1>

                    <a class="btn btn-primary position-absolute bottom-0 end-0" asp-page="/Dashboard/Dashboard">Back to Dashboard</a>
                </div>
            </div>

            <hr class="mb-4" />
        </div>
    </div>

    <div class="row g-4 justify-content-center">

        <div class="col-12 col-md-5 d-flex">
            <div class="card shadow-sm flex-fill">
                <div class="card-body text-center d-flex flex-column justify-content-center align-items-center">
                    <img src="@Model.ProfileImageBase64" alt="Profile image"
                         class="img-fluid rounded-circle mb-3"
                         style="width: 150px; height: 150px; object-fit: cover;">
                    <h3 class="card-title">@Model.CurrentUser.FirstName @Model.CurrentUser.LastName</h3>
                    <p class="card-text text-muted">@Model.CurrentUser.Degree</p>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-5 d-flex flex-column">

            <div class="card shadow-sm mb-4">
                <div class="card-body py-2">
                    <form method="get">
                        <label for="from-year" class="form-label fw-bold">Select year</label>
                        <select id="select-year" class="form-select form-select-sm w-100" name="selectedYear" onchange="this.form.submit()">
                            <option disabled selected>Select year</option>
                            @foreach (var year in Model.AvailableYears)
                            {
                                <option value="@year" selected="@(Model.selectedYear == year)">@year</option>
                            }
                        </select>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm flex-grow-1">
                <div class="card-body d-flex flex-column">

                    @if (Model.selectedYear != Model.AvailableYears.Min())
                    {
                        <h3 class="card-title mb-4">Your statistics from @(Model.AvailableYears.Min()) - @(Model.selectedYear)</h3>
                    }
                    else
                    {
                        <h3 class="card-title mb-4">Your statistics from @(Model.selectedYear)</h3>
                    }


                    <div class="table-responsive flex-grow-1">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col" class="text-start">Metric</th>
                                    <th scope="col" class="text-end">Entries</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="text-start">Goals Completed</td>
                                    <td class="text-end">@Model.SummaryData.GoalsCompleted</td>
                                </tr>
                                <tr>
                                    <td class="text-start">Evidence Uploaded for Competencies</td>
                                    <td class="text-end">@Model.SummaryData.NumCompetencies</td>
                                </tr>
                                <tr>
                                    <td class="text-start">Competencies at Emerging Level</td>
                                    <td class="text-end">@Model.SummaryData.Emerging</td>
                                </tr>
                                <tr>
                                    <td class="text-start">Competencies at Developing Level</td>
                                    <td class="text-end">@Model.SummaryData.Developing</td>
                                </tr>
                                <tr>
                                    <td class="text-start">Competencies at Proficient Level</td>
                                    <td class="text-end">@Model.SummaryData.Proficient</td>
                                </tr>
                                <tr>
                                    <td class="text-start">Competencies at Confident Level</td>
                                    <td class="text-end">@Model.SummaryData.Confident</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-4 text-end">
                        <a class="btn btn-warning w-100" asp-page="/Export/Export">Export</a>
                    </div>

                </div>
            </div>
        </div>

    </div>


</div>