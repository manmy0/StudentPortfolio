@page
@model StudentPortfolio.Pages.Summary.SummaryModel
@{
    ViewData["Title"] = "Summary";
}

<div class="container my-5">

    <!-- heading and back button -->
    <div class="row align-items-center mb-3">
        <div class="col text-center position-relative">
            <h1 class="m-0">Summary</h1>
            <a class="btn btn-primary position-absolute top-0 end-0" asp-page="/Dashboard/Dashboard">Back to Dashboard</a>
        </div>
    </div>

    <hr class="mb-4" />

    <!-- dropdown -->
    <div class="d-flex justify-content-center mb-4">

        <!-- get puts selectedYear=xxxx in the url for the controller to use -->
        <form method="get">
            <label for="select-year" class="form-label fw-bold">Filter by year</label>
            <select id="select-year" class="form-select w-auto" name="selectedYear" onchange="this.form.submit()">
                <option value="2024" selected="@(Model.selectedYear == 2024)">2024</option>
                <option value="2025" selected="@(Model.selectedYear == 2025)">2025</option>
            </select>
        </form>
    </div>

    <div class="row g-4 justify-content-center">

        <!-- profile stuff -->
        <div class="col-12 col-md-5">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center d-flex flex-column justify-content-center align-items-center">
                    <img src="@Model.ProfileImageBase64" alt="Profile image"
                         class="img-fluid rounded-circle mb-3"
                         style="width: 150px; height: 150px; object-fit: cover;">
                    <h3 class="card-title">@Model.CurrentUser.FirstName @Model.CurrentUser.LastName</h3>
                    <p class="card-text text-muted">@Model.CurrentUser.Degree</p>
                </div>
            </div>
        </div>

        <!-- stats stuff -->
        <div class="col-12 col-md-5">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h3 class="card-title text-center mb-3">Statistics for @Model.selectedYear</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col" class="text-start">Metric</th>
                                    <th scope="col" class="text-end">Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="text-start">Goals Completed</td>
                                    <td class="text-end">@Model.SummaryData.GoalsCompleted</td>
                                </tr>
                                <tr>
                                    <td class="text-start">Evidence Uploaded for Competencies</td>
                                    <td class="text-end">@Model.SummaryData.NumCompetencies</td>
                                </tr>
                                <tr>
                                    <td class="text-start">Competencies at Emerging Level</td>
                                    <td class="text-end">@Model.SummaryData.Emerging</td>
                                </tr>
                                <tr>
                                    <td class="text-start">Competencies at Developing Level</td>
                                    <td class="text-end">@Model.SummaryData.Developing</td>
                                </tr>
                                <tr>
                                    <td class="text-start">Competencies at Proficient Level</td>
                                    <td class="text-end">@Model.SummaryData.Proficient</td>
                                </tr>
                                <tr>
                                    <td class="text-start">Competencies at Confident Level</td>
                                    <td class="text-end">@Model.SummaryData.Confident</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- export button -->
    <div class="text-center mt-4">
        <a class="btn btn-secondary" asp-page="/Export/Export">Export</a>
    </div>

</div>
