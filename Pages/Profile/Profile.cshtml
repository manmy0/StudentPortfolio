@page
@model StudentPortfolio.Pages.Profile.ProfileModel
@{
}

@{
    ViewData["Title"] = "Profile";
}

@section ProfileNav {
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" asp-page="/Profile/Profile">Profile</a>
    </li>
}

<div class="container" style="margin-top: 50px; margin-right: 40px;">
    <div class="mr-6">
        <div class="container">
            @if (!string.IsNullOrEmpty(Model.ProfileImageBase64))
            {
                <img src="@Model.ProfileImageBase64" alt"Profile picture" style="width:150px;height:150px;border-radius:50%;" />
            }
            else
            {
                <p>No profile image</p>
            }
            <div class="col">
                <h1> @Model.CurrentUser.FirstName @Model.CurrentUser.LastName</h1>
                <p>@Model.CurrentUser.Specialisation @Model.CurrentUser.Degree</p>
            </div>
        </div>
    </div>


    <label for="box3" style="position: absolute; top: 130px; margin-right: 490px; margin-left: 600px;">My Links</label>
    <div class="my-box3">
        <div class="col">
            <ul>
                <li>
                    <a href="@Model.CurrentUser.LinkedIn">LinkedIn</a>
                </li>
                <li>
                    <a href="@Model.CurrentUser.Resume">Resume</a>
                </li>
                <li>
                    <a href="@Model.CurrentUser.UserLinks">Supporting Documents</a>
                </li>
            </ul>
        </div>
    </div>

    <label for="box1" style="position: absolute; top: 410px; margin-right: 490px; margin-left: 10px;">Personal Information</label>
    <div class="my-box" id="box1">
        <p>@Model.CurrentUser.Introduction</p>
    </div>

    <label for="box2" style="position: absolute; top: 410px; margin-right: 200px; margin-left: 600px;">Upcoming Actions for Personal Development</label>
    <div class="my-box2" id="box2">
            
        @foreach (var item in Model.CDP)
        {
            <ul>
                <li>
                    @Html.DisplayFor(modelItem => item.NetworkingPlan)
                </li>
            </ul>
        }

    </div>
</div>

<div>
    <a>TEST THE BRANCH</a>
</div>

