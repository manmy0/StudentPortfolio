@page
@model StudentPortfolio.Pages.Profile.EditModel
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="edit-profile-container">
    <h2>Edit Profile</h2>

    <!-- calls the on post async method from controller -->
    <form method="post" enctype="multipart/form-data" class="edit-profile-form">

        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <div class="form-group">
            <label asp-for="Input.FirstName"></label>
            <input asp-for="Input.FirstName" class="input-field" />
            <span asp-validation-for="Input.FirstName" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.LastName"></label>
            <input asp-for="Input.LastName" class="input-field" />
            <span asp-validation-for="Input.LastName" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Degree"></label>
            <input asp-for="Input.Degree" class="input-field" />
            <span asp-validation-for="Input.Degree" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Specialisation"></label>
            <input asp-for="Input.Specialisation" class="input-field" />
            <span asp-validation-for="Input.Specialisation" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Introduction"></label>
            <textarea asp-for="Input.Introduction" class="input-field"></textarea>
            <span asp-validation-for="Input.Introduction" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.LinkedIn"></label>
            <input asp-for="Input.LinkedIn" class="input-field" />
            <span asp-validation-for="Input.LinkedIn" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Resume"></label>
            <input asp-for="Input.Resume" class="input-field" />
            <span asp-validation-for="Input.Resume" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.ProfileImage"></label>
            <input asp-for="Input.ProfileImage" type="file" class="input-field" accept="image/*" />
            <span asp-validation-for="Input.ProfileImage" class="validation-error"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-page="/Profile/Profile" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
